<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_setting"
    app:startDestination="@id/settingFragment">

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.drwaing.ui.setting.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_setFontFragment"
            app:destination="@id/setFontFragment" />
        <action
            android:id="@+id/action_settingFragment_to_noticeFragment"
            app:destination="@id/noticeFragment" />
    </fragment>
    <fragment
        android:id="@+id/setFontFragment"
        android:name="com.example.drwaing.ui.setting.SetFontFragment"
        android:label="fragment_set_font"
        tools:layout="@layout/fragment_set_font" />
    <fragment
        android:id="@+id/noticeFragment"
        android:name="com.example.drwaing.ui.setting.NoticeFragment"
        android:label="fragment_notice"
        tools:layout="@layout/fragment_notice" />
</navigation>