<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@id/login_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"

        />

    <LinearLayout
        android:id="@+id/login_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".9">

        <LinearLayout
            android:id="@+id/ll_kakao_login"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_login_kakaobutton"
            android:backgroundTint="#FEE500"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_kakao"
                android:layout_height="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:lineSpacingExtra="6sp"
                android:text="카카오 계정으로 로그인"
                android:textColor="#111111"
                android:textSize="14sp"></TextView>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_google_login"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_login_googlebutton"
            android:gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/googleg_standard_color_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemibold"
                android:lineSpacingExtra="6sp"
                android:text="Google 계정으로 로그인"
                android:textColor="#111111"
                android:textSize="14sp"></TextView>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
