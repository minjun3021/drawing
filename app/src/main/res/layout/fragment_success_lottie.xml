<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/fragment_success_lottie"
        android:layout_width="128dp"
        android:layout_height="116dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/fragment_success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="회원가입이 완료되었어요!"
        app:layout_constraintLeft_toLeftOf="@id/fragment_success_lottie"
        app:layout_constraintRight_toRightOf="@id/fragment_success_lottie"
        app:layout_constraintTop_toBottomOf="@id/fragment_success_lottie" />

</androidx.constraintlayout.widget.ConstraintLayout>